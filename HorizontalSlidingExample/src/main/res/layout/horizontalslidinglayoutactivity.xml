<ru.gdo.android.library.slidinglayout.SlidingLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anim="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1000"
    anim:duration="750"
    anim:enableCollapseAllPanel="true"
    anim:expandedPercentSize="50">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="120"
        android:background="#ff000000"
        android:orientation="horizontal"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#0FB4FF"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ClickMe"
                android:id="@+id/textView" />
        </RelativeLayout>

        <ru.gdo.android.library.foldinglayout.FoldingPanelLayout
            xmlns:fpl="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="1"
            fpl:externalAnimator="true"
            fpl:foldNumbers="6"
            fpl:foldingDuration="1000"
            fpl:initialPanelState="collapsed"
            fpl:testingMode="false"
            tools:ignore="MissingPrefix">

            <!-- MAIN CONTENT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0FB4FF"
                android:orientation="vertical"
                android:weightSum="1">

            </RelativeLayout>

            <!-- SLIDING LAYOUT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0FB4FF"
                android:orientation="vertical" />

        </ru.gdo.android.library.foldinglayout.FoldingPanelLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="120"
        android:background="#ff000000"
        android:orientation="horizontal"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#2c3f4e"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ClickMe" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#2c3f4e" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="120"
        android:background="#ff000000"
        android:orientation="horizontal"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#526171"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ClickMe" />
        </RelativeLayout>

        <ru.gdo.android.library.foldinglayout.FoldingPanelLayout
            xmlns:fpl="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1"
            fpl:externalAnimator="true"
            fpl:foldNumbers="6"
            fpl:foldingDuration="1000"
            fpl:initialPanelState="collapsed"
            fpl:testingMode="false"
            tools:ignore="MissingPrefix">

            <!-- MAIN CONTENT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#526171"
                android:orientation="vertical"
                android:weightSum="1">

            </RelativeLayout>

            <!-- SLIDING LAYOUT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#526171"
                android:orientation="vertical" />

        </ru.gdo.android.library.foldinglayout.FoldingPanelLayout>


    </LinearLayout>

</ru.gdo.android.library.slidinglayout.SlidingLayout>
