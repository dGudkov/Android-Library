<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:endColor="@color/md_default_disabled_end" android:startColor="@color/md_default_disabled_start" />

            <stroke android:width="@dimen/md_stroke_width" android:color="@color/md_default_disabled_border" />

            <corners android:radius="@dimen/md_corner_radius" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/md_default_pressed_start" android:startColor="@color/md_default_pressed_end" />

            <stroke android:width="@dimen/md_stroke_width" android:color="@color/md_default_pressed_border" />

            <corners android:radius="@dimen/md_corner_radius" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="90" android:endColor="@color/md_default_normal_end" android:startColor="@color/md_default_normal_start" />

            <stroke android:width="@dimen/md_stroke_width" android:color="@color/md_default_normal_border" />

            <corners android:radius="@dimen/md_corner_radius" />
        </shape>
    </item>

</selector>
