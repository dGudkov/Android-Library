<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"
        android:bottom="@dimen/md_button_layer_padding"
        android:left="@dimen/md_button_layer_padding"
        android:right="@dimen/md_button_layer_padding"
        android:top="@dimen/md_button_half_button_height">
        <shape android:shape="rectangle">

            <gradient
                android:startColor="@color/md_bluegrey_disabled_end"
                android:endColor="@color/md_bluegrey_disabled_start"
                android:gradientRadius="50"
                android:centerY="1"
                android:type="radial"/>

            <corners android:radius="@dimen/md_corner_radius" />

            <stroke android:width="@dimen/md_stroke_width" android:color="@color/md_bluegrey_disabled_border" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient
                android:angle="270"
                android:startColor="@color/md_bluegrey_pressed_start"
                android:endColor="@color/md_bluegrey_pressed_end"
                android:gradientRadius="50"
                android:centerY="0"
                android:type="radial" />

            <corners android:radius="@dimen/md_corner_radius" />

            <stroke android:width="@dimen/md_stroke_width" android:color="@color/md_bluegrey_pressed_border" />

        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">

            <gradient
                android:angle="270"
                android:startColor="@color/md_bluegrey_normal_end"
                android:endColor="@color/md_bluegrey_normal_start"
                android:gradientRadius="50"
                android:centerY="1"
                android:type="radial" />

            <corners android:radius="@dimen/md_corner_radius" />

            <stroke android:width="@dimen/md_stroke_width" android:color="@color/md_bluegrey_normal_border" />

        </shape>
    </item>

</selector>
