<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ru.gdo.android.example.materialdesign.fragments.SwitchFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="ru.gdo.android.example.materialdesign.fragments.CheckBoxFragment">

        <ru.gdo.android.library.materialdesign.widget.MDCheckBox
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_margin="1dp"
            android:layout_height="50dp"
            app:cb_stroke_width="2dp"
            app:cb_stroke_color="#607D8B"
            app:cb_circle_color="#795548"/>

        <ru.gdo.android.library.materialdesign.widget.MDCheckBox
            android:id="@+id/checkbox_1"
            android:layout_gravity="center_horizontal"
            android:layout_width="60dp"
            android:padding="4dp"
            android:layout_height="60dp"
            app:cb_stroke_width="3dp"
            app:cb_stroke_color="#9C27B0"
            app:cb_circle_color="#FFFFFF"/>

        <ru.gdo.android.library.materialdesign.widget.MDCheckBox
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:padding="4dp"
            android:layout_height="100dp"
            app:cb_stroke_width="4dp"
            app:cb_stroke_color="#2196F3"
            app:cb_circle_color="#1976D2"/>

        <ru.gdo.android.library.materialdesign.widget.MDCheckBox
            android:id="@+id/checkbox_2"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:padding="4dp"
            android:layout_height="100dp"
            app:cb_stroke_width="4dp"
            app:cb_stroke_color="#009688"
            app:cb_circle_color="#4CAF50"/>

        <ru.gdo.android.library.materialdesign.widget.MDCheckBox
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:padding="6dp"
            android:layout_height="100dp"
            app:cb_stroke_width="4dp"
            app:cb_stroke_color="#512DA8"
            app:cb_circle_color="#9C27B0"/>

        <ru.gdo.android.library.materialdesign.widget.MDTouchCheckBox
            android:id="@+id/tcb"
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:checked="true"
            android:duration="500"
            />

        <ru.gdo.android.library.materialdesign.widget.MDTouchCheckBox
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:checked="false"
            app:tcb_mode="circle"
            android:duration="100"
            app:tcb_flagwidth="5dp"
            app:tcb_borderwidth="5dp"
            app:tcb_flagcolor="#ad45d3"
            app:tcb_checkedcolor="#009688"
            app:tcb_uncheckedcolor="#4CAF50"
            app:tcb_checkedbordercolor="#4CAF50"
            app:tcb_uncheckedbordercolor="#009688"

            />

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <!--<include layout="@layout/fragment_button_bluegrey_orange" />-->

    </LinearLayout>

</ScrollView>