<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ru.gdo.android.library.materialdesign.widget.MDShadowToggle
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:enabled="false"
            app:offBackground="@drawable/md_purple_selector_linear_gradient"
            app:onBackground="@drawable/md_purple_selector_linear_gradient"
            app:offText="@string/str_sliding_touch_switch_right"
            app:onText="@string/str_sliding_touch_switch_left"
            app:sl_duration="50"
            app:sl_dx='5dp'
            app:sl_dy='5dp'
            app:sl_shadow="@color/md_purple_shadow" />

        <ru.gdo.android.library.materialdesign.widget.MDShadowToggle
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:offBackground="@drawable/md_purple_selector_linear_gradient"
            app:onBackground="@drawable/md_deeppurple_selector_linear_gradient"
            app:offText="@string/str_purple"
            app:onText="@string/str_deeppurple"
            app:sl_animEnabled="false"
            app:sl_duration="50"
            app:sl_dx='5dp'
            app:sl_dy='5dp'
            app:sl_shadow="@color/md_purple_shadow" />

        <ru.gdo.android.library.materialdesign.widget.MDShadowToggle
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:duration="1000"
            android:checked="false"
            app:offBackground="@drawable/md_deeppurple_selector_linear_gradient"
            app:onBackground="@drawable/md_purple_selector_linear_gradient"
            app:offText="@string/str_deeppurple"
            app:onText="@string/str_purple"
            app:sl_duration="50"
            app:sl_dx='5dp'
            app:sl_dy='5dp'
            app:sl_shadow="@color/md_deeppurple_shadow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ru.gdo.android.library.materialdesign.widget.MDShadowToggle
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:sliderBackground="@drawable/md_purple_selector_linear_gradient"
            android:checked="false"
            android:enabled="false"
            app:sl_duration="50"
            app:sl_dx='5dp'
            app:sl_dy='5dp'
            app:sl_shadow="@color/md_purple_shadow" />

        <ru.gdo.android.library.materialdesign.widget.MDShadowToggle
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:sliderBackground="@drawable/md_purple_selector_linear_gradient"
            app:sl_animEnabled="false"
            app:sl_dx='5dp'
            app:sl_dy='5dp'
            app:sl_shadow="@color/md_purple_shadow" />

        <ru.gdo.android.library.materialdesign.widget.MDShadowToggle
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:duration="1000"
            app:offBackground="@drawable/md_purple_selector_linear_gradient"
            app:onBackground="@drawable/md_purple_selector_linear_gradient"
            app:sliderBackground="@drawable/md_deeppurple_selector_linear_gradient"
            app:sl_duration="50"
            app:sl_dx='5dp'
            app:sl_dy='5dp'
            app:sl_shadow="@color/md_deeppurple_shadow" />

    </LinearLayout>

</LinearLayout>