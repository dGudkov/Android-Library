<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ========================================== -->
    <!-- =                    App                 = -->
    <!-- ========================================== -->
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/clr_actionbar_background</item>
        <item name="colorPrimaryDark">@color/clr_actionbar_dark_background</item>
        <item name="colorAccent">@color/clr_actionbar_accent_background</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/clr_actionbar_background</item>
        <item name="colorPrimaryDark">@color/clr_actionbar_dark_background</item>
        <item name="colorAccent">@color/clr_actionbar_accent_background</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <!-- ========================================== -->
    <!-- =               Action bar               = -->
    <!-- ========================================== -->
    <style name="ActionBar.Background" parent="android:TextAppearance.Holo">
        <item name="android:background">@color/clr_actionbar_background</item>
    </style>

    <style name="ActionBar.Field" parent="ActionBar.Background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ActionBar.Image" parent="ActionBar.Field">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ActionBar.Title" parent="ActionBar.Field">
        <item name="android:textColor">@color/clr_actionbar_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ========================================== -->
    <!-- =                    Menu                = -->
    <!-- ========================================== -->

    <style name="Menu.Background" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@color/clr_menu_background</item>
    </style>


    <style name="MenuItem.Background" parent="android:TextAppearance.Holo">
        <!--<item name="android:background">@color/clr_menu_background</item>-->
    </style>

    <style name="MenuItem.Text" parent="MenuItem.Background">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/clr_menu_item_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
