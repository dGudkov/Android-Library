<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_alphabet_background_text_color"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".data.ViewData_Calendar">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_margin="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/clr_calendar_background_text_color"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:id="@+id/calendarDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/clr_calendar_background_text_color"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/clr_calendar_text_color"
            android:textSize="55dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calendarMonth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/clr_calendar_background_text_color"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/clr_calendar_text_color"
            android:textSize="30dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calendarDayWeek"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/clr_calendar_background_text_color"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/clr_calendar_text_color"
            android:textSize="15dip"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>