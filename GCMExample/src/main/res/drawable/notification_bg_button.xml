<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#BBBBBB" />
            <stroke
                android:width="1dp"
                android:color="#BBBBBB" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#EEEEEE"
                android:endColor="#BBBBBB"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#BBBBBB" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>